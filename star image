using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace 图形
{
    class Program
    {
        static void Main(string[] args)
        {


            for (int k = 0; k < 3; k++)
            {
                for (int a = 0; a < 4; a++)
                    if (a < 3 - k)
                        Console.Write("\0");
                    else             
                    Console.Write("*");
                Console.WriteLine();
            }
            
        } 
        
    }
}
